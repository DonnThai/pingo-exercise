<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @shoe.cover.url(:medium) %>
</p>
<p>
  <strong>Name:</strong>
  <%= @shoe.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @shoe.category.try(:name) %>
</p>

<p>
  <strong>Company:</strong>
  <%= @shoe.company.try(:name) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @shoe.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @shoe.price %>
</p>


<h4 style="margin-top: 20px;">Customer's feedbacks</h4>
<div style="padding-bottom: 20px; padding-top: 10px;">
  <% @comments.each_with_index do |comment, idx| %>
    <div style="background:yellow; border-radius: 10px 10px;">
      <div style="padding-left:15px;"><%= comment.user.email%></div>
    </div>
    <div style="background:black; color:white; border-radius: 10px 10px;">
      <div style="padding-left:15px;"><%= comment.comment%></div>
    </div>
  <% end %>
</div>

<%= form_for @new_comment do |f| %>

  <div class="box">
          <div class="box-head">
            <h2>Add New Comments</h2>
          </div>          
          <form action="" method="post">
            <div class="form">
                <p>
                  <span class="req">max 100 symbols</span>                     
                        <%= f.text_area :comment %> 
                </p>  
              
            </div>
      <span class="field">
        <%= f.label :user_id %>
        <%= select(:comment, :user_id, options_from_collection_for_select(User.all, :id, :email)) %>
      </span>

          </form>
            <input type = "hidden" name = 'comment[commentable_type]', value=<%= @shoe.class.name%>>
           <input type = "hidden" name = 'comment[commentable_id]', value=<%= @shoe.id%>>
            <span style= "margin-left: 10px;"><%= f.submit %></span>
   </div>
   
    <div style="float:left;"><%= link_to 'Back', categories_path %></div>
<% end %>


